<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#006682"
        >

        <TextView
            android:id="@+id/txtTenTruyen"
            android:layout_width="321dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="Tên truyện này dài lằm nên phải coi thử là để dài bao nhiêu thì phù hợp"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="76dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_arrow_back"
            android:drawableLeft="@drawable/ic_arrow_back"
            android:background="#006682"
            android:paddingLeft="10dp"
            android:onClick="veHome"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imglink"
            android:layout_width="140dp"
            android:layout_height="209dp"
            android:layout_gravity="left"
            android:src="@drawable/voluyendinhphong"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="136dp" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="13dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác giả:"
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="153dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình trạng:"
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="191dp"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại:"
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="230dp"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày cập nhật:"
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="307dp"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày xuất bản:"
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="272dp"
                android:paddingTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="right">

                <Button
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:drawableStart="@drawable/ic_book"
                    android:drawableLeft="@drawable/ic_book"
                    android:text="Đọc truyện"
                    android:textSize="11dp"
                    android:background="@drawable/bg_btn_custom2"
                    android:layout_marginTop="6dp"
                    android:padding="7dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:onClick="gotoRead"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="13dp"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/txtTacGia"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:text="tên tác giả"
                tools:layout_editor_absoluteX="258dp"
                tools:layout_editor_absoluteY="153dp" />

            <TextView
                android:id="@+id/txtTinhTrang"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:text="Đang cập nhật"
                tools:layout_editor_absoluteX="258dp"
                tools:layout_editor_absoluteY="191dp"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/txtTheLoai"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:text="Thể loại truyện"
                tools:layout_editor_absoluteX="258dp"
                tools:layout_editor_absoluteY="230dp"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/txtNCN"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:text="Ngày cập nhật"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/tvNXB"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:text="Ngày xuất bản"
                tools:layout_editor_absoluteX="258dp"
                tools:layout_editor_absoluteY="307dp"
                android:paddingTop="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="442dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Tóm tắt"
            android:gravity="center|bottom"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ScrollView
